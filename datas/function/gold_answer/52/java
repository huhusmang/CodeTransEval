public static  int pickingNumbers(List<Integer> a) {
    HashMap<Integer, Integer> d = new HashMap<>();
    for (int num : a) {
        d.put(num, d.getOrDefault(num, 0) + 1);
    }
    int best = 0;
    for (int i = 0; i < 99; ++i) {
        best = Math.max(d.getOrDefault(i, 0) + d.getOrDefault(i + 1, 0), best);
    }
    return best;
}